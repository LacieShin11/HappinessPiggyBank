<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_custom_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_custom_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="제목"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/dialog_custom_guide_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_custom_title_textview"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:text="안내 멘트"
        android:textSize="18dp" />

    <Button
        android:id="@+id/dialog_custom_ok_button"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_custom_guide_textview"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorTransparency"
        android:text="확인"
        android:textSize="17dp"/>

    <Button
        android:id="@+id/dialog_custom_cancel_button"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_custom_guide_textview"
        android:layout_toLeftOf="@+id/dialog_custom_ok_button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="69dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorTransparency"
        android:text="취소"
        android:textSize="17dp"/>

</RelativeLayout>